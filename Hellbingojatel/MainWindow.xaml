<Window x:Class="Hellbingojatel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hellbingojatel"
        mc:Ignorable="d"
        Title="MainWindow" Height="700"  Width="1500" 
        >
    <Window.Background>
        <ImageBrush ImageSource = "edu-bokow-prison-day.jpg" Opacity = "0.3" />
    </Window.Background >

    <Grid x:Name="grid">
        <Grid x:Name="menu" d:IsHidden="True">
            <Label Content="Hell Bingo" FontSize="120" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,62,0,0" Foreground="Red" FontFamily = "Segoe Script" FontWeight = "UltraBold" />
            <Button x:Name="startButton" Content="Start Game" FontSize="72" Width="586" Height="150" HorizontalAlignment="Center" VerticalAlignment="Top" Click="StartButton_Click" BorderBrush = "Black" FontFamily = "Segoe Script" FontWeight = "UltraBold" Margin="0,300,0,0" />
            <Rectangle HorizontalAlignment="Left" Height="100" Margin="398,682,0,0" Stroke="Black" VerticalAlignment="Top" Width="100"/>
            <Button Content="Infinit ink" HorizontalAlignment="Left" Margin="607,475,0,0" VerticalAlignment="Top" Height="46" Width="229" Click="Button_Click_4"/>

        </Grid>
        <Grid x:Name="game">
            <Label x:Name="statuscsheckeringame" Content="Welcome to Horror Bingo" HorizontalAlignment="Center" Margin="0,21,0,0" VerticalAlignment="Top" Height="56" Width="440" Foreground="#FFB20000" FontSize="36"/>
            <Label Content="Your numbers:" x:Name="mynumberslabel" FontSize="25" FontWeight="SemiBold" Foreground="White" FontFamily = "Segoe Script" Margin="115,180,1056,449"/>
            <Button x:Name="nextround" Content="Next Round" HorizontalAlignment="Left" Margin="1073,496,0,0" VerticalAlignment="Top" Height="59" Width="230" FontSize="36" Background="#00DDDDDD" BorderBrush="#00707070" Foreground="#FF9D0A0A" FontWeight="UltraBold" FontFamily="Corbel" Click="nextround_Click"/>
            <Button x:Name="home" Content="backtohome" HorizontalAlignment="Left" Margin="40,39,0,0" VerticalAlignment="Top" Click="Button_Click_5"/>
            <Button x:Name="powerupsbutton" Content="Powerups" FontSize="30px"  HorizontalAlignment="Left" Margin="881,480,0,0" VerticalAlignment="Top" Height="66" Width="152" Background="#00DDDDDD" BorderBrush="#01707070" Foreground="#FF526FFF" Click="Button_Click_2"/>
            <Grid x:Name="powerupwindow" Margin="863,151,197,237">
                <Button Content="Use" x:Name="usenumberchanger" HorizontalAlignment="Left" Margin="254,43,0,0" VerticalAlignment="Top" Height="49" Width="142" Click="usenumberchanger_Click"/>
                <Button Content="Use" x:Name="useenemymissround" HorizontalAlignment="Left" Margin="254,128,0,0" VerticalAlignment="Top" Height="44" Width="142" Click="useenemymissround_Click"/>
                <Button Content="Use" x:Name="kaka2" HorizontalAlignment="Left" Margin="254,205,0,0" VerticalAlignment="Top" Height="44" Width="142" Click="kaka2_Click"/>
                <Label Content="Numberchanger" FontSize="22px" Foreground="White" HorizontalAlignment="Left" Margin="32,28,0,0" VerticalAlignment="Top"/>
                <Label Content="1" x:Name="numberchangerpowerup" FontSize="18px" Foreground="green" HorizontalAlignment="Left" Margin="57,54,0,0" VerticalAlignment="Top" Width="118"/>
                <Label Content="Enemy miss round" FontSize="22px" Foreground="White" HorizontalAlignment="Left" Margin="32,112,0,0" VerticalAlignment="Top"/>
                <Label Content="2" x:Name="enemymissroundpowerup" FontSize="18px" Foreground="green" HorizontalAlignment="Left" Margin="57,138,0,0" VerticalAlignment="Top" Width="118"/>
                <Label Content="Wild card" FontSize="22px" Foreground="White" HorizontalAlignment="Left" Margin="32,194,0,0" VerticalAlignment="Top"/>
                <Label Content="3" x:Name="wildcardpowerup" FontSize="18px" Foreground="green" HorizontalAlignment="Left" Margin="57,220,0,0" VerticalAlignment="Top" Width="118"/>
            </Grid>
            <Grid x:Name="mynumbers" Margin="115,219,800,94">
                <Button x:Name="m1" FontSize="40px" HorizontalAlignment="Left" Width="75" Height="75" Margin="50,50,0,0" VerticalAlignment="Top" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
                <Button x:Name="m2" FontSize="40px" HorizontalAlignment="Left" Width="75" Height="75" Margin="150,50,0,0" VerticalAlignment="Top" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
                <Button x:Name="m3" FontSize="40px" HorizontalAlignment="Left" Width="75" Height="75" Margin="250,50,0,0" VerticalAlignment="Top" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
                <Button x:Name="m4" FontSize="40px" HorizontalAlignment="Left" Width="75" Height="75" Margin="350,50,0,0" VerticalAlignment="Top" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
                <Button x:Name="m5" FontSize="40px" HorizontalAlignment="Left" Width="75" Height="75" Margin="450,50,0,0" VerticalAlignment="Top" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
                <Button x:Name="m6" FontSize="40px" HorizontalAlignment="Left" Width="75" Height="75" Margin="50,150,0,0" VerticalAlignment="Top" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
                <Button x:Name="m7" FontSize="40px" HorizontalAlignment="Left" Width="75" Height="75" Margin="150,150,0,0" VerticalAlignment="Top" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
                <Button x:Name="m8" FontSize="40px" HorizontalAlignment="Left" Width="75" Height="75" Margin="250,150,0,0" VerticalAlignment="Top" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
                <Button x:Name="m9" FontSize="40px" HorizontalAlignment="Left" Width="75" Height="75" Margin="350,150,0,0" VerticalAlignment="Top" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
                <Button x:Name="m10" FontSize="40px" HorizontalAlignment="Left" Width="75" Height="75" Margin="450,150,0,0" VerticalAlignment="Top" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
                <Button x:Name="m11" FontSize="40px" HorizontalAlignment="Left" Width="75" Height="75" Margin="50,250,0,0" VerticalAlignment="Top" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
                <Button x:Name="m12" FontSize="40px" HorizontalAlignment="Left" Width="75" Height="75" Margin="150,250,0,0" VerticalAlignment="Top" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
                <Button x:Name="m13" FontSize="40px" HorizontalAlignment="Left" Width="75" Height="75" Margin="250,250,0,0" VerticalAlignment="Top" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
                <Button x:Name="m14" FontSize="40px" HorizontalAlignment="Left" Width="75" Height="75" Margin="350,250,0,0" VerticalAlignment="Top" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
                <Button x:Name="m15" FontSize="40px" HorizontalAlignment="Left" Width="75" Height="75" Margin="450,250,0,0" VerticalAlignment="Top" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>


            </Grid>
            <Label x:Name="nightscount" Content="night 1" Foreground="Red" FontSize="30" HorizontalAlignment="Left" Margin="1333,27,0,0" VerticalAlignment="Top" Height="50" Width="121"/>
        </Grid>
        <Grid x:Name="buyphase" Margin="100,100,100,100" d:IsHidden="True">
            <Label x:Name="currentstatus" FontSize="15" FontWeight="UltraBold" Foreground="Green" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Width="438" Height="45"/>
            <Label x:Name="inkcount" FontSize="40px" Foreground="White" HorizontalAlignment="Left" Margin="56,48,0,0" VerticalAlignment="Top" Height="63" Width="555" FontFamily="Bahnschrift Condensed"/>
            <Button x:Name="bnch" Content="Buy number changer (5ink)" FontSize="20px" HorizontalAlignment="Left" Margin="144,242,0,0" VerticalAlignment="Top" Height="68" Width="328" FontFamily = "Segoe Script" FontWeight = "UltraBold" Click="Button_Click_1"/>
            <Label x:Name="numberchangercount" FontSize="20px" Foreground="Red" HorizontalAlignment="Left" Margin="144,315,0,0" VerticalAlignment="Top" Height="48" Width="328" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
            <Button x:Name="bes" Content="Buy enemy skip (10ink)" FontSize="20px" FontFamily = "Segoe Script" FontWeight = "UltraBold"  HorizontalAlignment="Left" Margin="556,242,0,0" VerticalAlignment="Top" Height="68" Width="292" Click="Button_Click_3"/>
            <Label x:Name="enemymissroundcount" FontSize="20px" Foreground="Red" HorizontalAlignment="Left" Margin="538,315,0,0" VerticalAlignment="Top" Height="48" Width="328" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
            <Button x:Name="bwc" Content="Buy wild card" FontSize="20px" FontFamily = "Segoe Script" FontWeight = "UltraBold" HorizontalAlignment="Left" Margin="923,242,0,0" VerticalAlignment="Top" Height="68" Width="289" Click="Button_Click_6"/>
            <Label x:Name="wildcardcount" FontSize="20px" Foreground="Red" HorizontalAlignment="Left" Margin="904,315,0,0" VerticalAlignment="Top" Height="48" Width="328" FontFamily = "Segoe Script" FontWeight = "UltraBold"/>
            <Button x:Name="play" Content="PLAY" FontSize="40" HorizontalAlignment="Left" Margin="1058,401,0,0" VerticalAlignment="Center" Height="61" Width="168" Click="Button_Click"/>


        </Grid>
        <Grid x:Name="Won" Margin="50,50,50,50" d:IsHidden="True">
            <Label Content="You Won!" Foreground="Green" FontSize="60"  HorizontalAlignment="Center" Margin="0,115,0,0" VerticalAlignment="Top" Height="111" Width="268"/>
            <Label x:Name="pluszinkwonsc" Content="+20 Inks" FontSize="40" Foreground="Blue" HorizontalAlignment="Center" Margin="0,319,0,0" VerticalAlignment="Top" />
            <Label x:Name="nightsurvivedwonsc" Content="Day 1 survived" Foreground="White" FontSize="40" HorizontalAlignment="Center" Margin="0,226,0,0" VerticalAlignment="Top" Height="61" Width="322"/>
            <Button Content="Play next night" Background="Gray" FontSize="40" HorizontalAlignment="Center" Margin="0,446,0,0" VerticalAlignment="Top" Height="83" Width="322" Click="Button_Click_7"/>

        </Grid>
    </Grid>
</Window>
